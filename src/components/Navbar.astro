---
import { getLangFromUrl, useTranslations } from '../i18n/utils';
import LanguagePicker from './LanguagePicker.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<nav class="bg-white shadow-lg fixed w-full z-50">
  <div class="max-w-7xl mx-auto px-4">
    <!-- Desktop y Logo -->
    <div class="flex justify-between h-16">
      <div class="flex items-center">
        <a href="/" class="text-2xl font-bold text-primary">TransporteGPS</a>
      </div>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex items-center space-x-4">
        <div class="relative group">
          <button class="text-gray-700 hover:text-primary px-3 py-2">
            {t('nav.services')}
            <svg class="w-4 h-4 ml-1 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
            </svg>
          </button>
          <div class="absolute left-0 mt-2 w-48 bg-white rounded-md shadow-lg hidden group-hover:block">
            <a href={`/${lang === 'es' ? '' : lang}/rastreo-satelital`} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{t('nav.tracking')}</a>
            <a href={`/${lang === 'es' ? '' : lang}/control-combustible`} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{t('nav.fuel')}</a>
            <a href={`/${lang === 'es' ? '' : lang}/seguridad-vehicular`} class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">{t('nav.security')}</a>
          </div>
        </div>

        <a href={`/${lang === 'es' ? '' : lang}/#caracteristicas`} class="text-gray-700 hover:text-primary px-3 py-2">{t('nav.features')}</a>
        <a href={`/${lang === 'es' ? '' : lang}/#precios`} class="text-gray-700 hover:text-primary px-3 py-2">{t('nav.pricing')}</a>
        <a href={`/${lang === 'es' ? '' : lang}/#contacto`} class="text-gray-700 hover:text-primary px-3 py-2">{t('nav.contact')}</a>
        <a href="/acceso" class="text-primary hover:text-secondary px-3 py-2">{t('nav.access')}</a>
        <a href="/demo" class="bg-secondary text-white px-4 py-2 rounded hover:bg-secondary/90">{t('nav.demo')}</a>
        <a href={`/${lang === 'es' ? '' : lang}/#demo`} class="bg-primary text-white px-4 py-2 rounded hover:bg-primary/90">
          {t('nav.trial')}
        </a>
        <LanguagePicker />
      </div>

      <!-- Botón Mobile -->
      <button id="menuButton" class="lg:hidden p-2 rounded-md text-gray-700 hover:text-primary hover:bg-gray-100">
        <svg class="h-6 w-6" stroke="currentColor" fill="none" viewBox="0 0 24 24">
          <path id="menuIcon" class="block" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          <path id="closeIcon" class="hidden" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </button>
    </div>

    <!-- Mobile Menu -->
    <div id="mobileMenu" class="hidden lg:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1">
        <!-- Servicios Dropdown Mobile -->
        <div class="relative">
          <button id="servicesButton" class="w-full text-left px-3 py-2 text-gray-700 hover:text-primary hover:bg-gray-100 rounded">
            {t('nav.services')}
            <svg class="w-4 h-4 ml-1 inline-block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </button>
          <div id="servicesDropdown" class="hidden px-4">
            <a href={`/${lang === 'es' ? '' : lang}/rastreo-satelital`} class="block py-2 text-gray-700 hover:text-primary">{t('nav.tracking')}</a>
            <a href={`/${lang === 'es' ? '' : lang}/control-combustible`} class="block py-2 text-gray-700 hover:text-primary">{t('nav.fuel')}</a>
            <a href={`/${lang === 'es' ? '' : lang}/seguridad-vehicular`} class="block py-2 text-gray-700 hover:text-primary">{t('nav.security')}</a>
          </div>
        </div>

        <a href={`/${lang === 'es' ? '' : lang}/#caracteristicas`} class="block px-3 py-2 text-gray-700 hover:text-primary hover:bg-gray-100 rounded">{t('nav.features')}</a>
        <a href={`/${lang === 'es' ? '' : lang}/#precios`} class="block px-3 py-2 text-gray-700 hover:text-primary hover:bg-gray-100 rounded">{t('nav.pricing')}</a>
        <a href={`/${lang === 'es' ? '' : lang}/#contacto`} class="block px-3 py-2 text-gray-700 hover:text-primary hover:bg-gray-100 rounded">{t('nav.contact')}</a>
        <a href="/acceso" class="block px-3 py-2 text-primary hover:text-secondary hover:bg-gray-100 rounded">{t('nav.access')}</a>
        <a href="/demo" class="block px-3 py-2 bg-secondary text-white hover:bg-secondary/90 rounded">{t('nav.demo')}</a>
        <a href={`/${lang === 'es' ? '' : lang}/#demo`} class="block px-3 py-2 bg-primary text-white hover:bg-primary/90 rounded">
          {t('nav.trial')}
        </a>
        <div class="px-3 py-2">
          <LanguagePicker />
        </div>
      </div>
    </div>
  </div>
</nav>

<script>
  // Elementos del DOM
  const menuButton = document.getElementById('menuButton');
  const mobileMenu = document.getElementById('mobileMenu');
  const menuIcon = document.getElementById('menuIcon');
  const closeIcon = document.getElementById('closeIcon');
  const servicesButton = document.getElementById('servicesButton');
  const servicesDropdown = document.getElementById('servicesDropdown');

  // Toggle Menu Principal
  function toggleMenu() {
    if (mobileMenu && menuIcon && closeIcon) {
      const isMenuHidden = mobileMenu.classList.contains('hidden');
      
      // Toggle menú
      mobileMenu.classList.toggle('hidden');
      
      // Toggle iconos
      menuIcon.classList.toggle('hidden');
      closeIcon.classList.toggle('hidden');
      
      // Si estamos cerrando el menú principal, también cerramos el dropdown
      if (!isMenuHidden && servicesDropdown) {
        servicesDropdown.classList.add('hidden');
      }
    }
  }

  // Toggle Servicios Dropdown
  function toggleServices(e: Event) {
    e.stopPropagation();
    if (servicesDropdown) {
      servicesDropdown.classList.toggle('hidden');
    }
  }

  // Event Listeners
  menuButton?.addEventListener('click', toggleMenu);
  servicesButton?.addEventListener('click', toggleServices);

  // Cerrar al hacer click fuera
  document.addEventListener('click', (e) => {
    if (mobileMenu && 
        !mobileMenu.contains(e.target as Node) && 
        menuButton && 
        !menuButton.contains(e.target as Node)) {
      mobileMenu.classList.add('hidden');
      if (menuIcon && closeIcon) {
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      }
    }
  });

  // Cerrar al redimensionar
  window.addEventListener('resize', () => {
    if (window.innerWidth >= 1024 && mobileMenu) {
      mobileMenu.classList.add('hidden');
      if (menuIcon && closeIcon) {
        menuIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
      }
      if (servicesDropdown) {
        servicesDropdown.classList.add('hidden');
      }
    }
  });
</script>