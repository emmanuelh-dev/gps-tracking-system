  {/* Content Sections */}
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container max-w-6xl mx-auto px-4">
      <div class="space-y-32">
        {
          sections.map((section, index) => (
            <div id={section.id} class="scroll-mt-20">
              <div
                class={`grid md:grid-cols-2 gap-16 items-center ${
                  index % 2 === 1 ? "md:grid-flow-col-dense" : ""
                }`}
              >
                <div
                  class={`space-y-8 ${index % 2 === 1 ? "md:col-start-2" : ""}`}
                >
                  <div class="space-y-4">
                    <div class="inline-flex items-center px-4 py-2 rounded-full bg-primary/10 text-primary font-medium space-x-2">
                      <span class="w-2 h-2 rounded-full bg-primary"></span>
                      <span>{section.tag}</span>
                    </div>
                    <h3 class="text-3xl lg:text-4xl font-bold leading-tight">{section.title}</h3>
                  </div>
                  
                  <p class="text-gray-600 text-lg leading-relaxed">{section.description}</p>
                  
                  <div class="flex flex-wrap gap-4">
                    {section.stats.map((stat) => (
                      <div class="px-6 py-3 bg-white rounded-xl shadow-sm hover:shadow-md transition-shadow duration-300 border border-gray-100">
                        <p class="font-semibold text-primary">{stat}</p>
                      </div>
                    ))}
                  </div>
                </div>
                
                <div class={`transform ${index % 2 === 1 ? "md:col-start-1" : ""}`}>
                  <div class="relative group">
                    <div></div>
                    <Image
                      width={900}
                      height={643}
                      src={section.image}
                      alt={section.title}
                    />
                  </div>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
  <section class="py-20 bg-primary text-white text-center">
