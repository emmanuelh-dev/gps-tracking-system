---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const keywords = [
  'Rastreo GPS Satelital',
  'Monitoreo en Tiempo Real',
  'Localizaci√≥n Satelital',
  'Control de Flotas',
  'Seguimiento Vehicular'
];
---
<section class="pt-24 pb-12 bg-primary">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center text-white">
      <div class="flex justify-center gap-2 flex-wrap mb-4">
        {keywords.map(keyword => (
          <span class="bg-white/10 px-3 py-1 rounded-full text-sm">
            {keyword}
          </span>
        ))}
      </div>
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        {t('hero.title')}
      </h1>
      <p class="text-xl mb-4 max-w-3xl mx-auto">
        {t('hero.subtitle')}
      </p>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        <span class="bg-secondary px-4 py-1 rounded-full inline-block">
          {t('hero.share')}
        </span>
        <br />
        <span class="text-lg opacity-90">
          {t('hero.share.desc')}
        </span>
      </p>
      <div class="flex justify-center gap-4">
        <a href="/acceso" class="bg-secondary text-white px-8 py-3 hover:bg-secondary/90 transition-colors">
          {t('hero.cta.access')}
        </a>
        <a href="/demo" class="bg-white text-primary px-8 py-3 hover:bg-gray-100 transition-colors">
          {t('hero.cta.demo')}
        </a>
        <a href={`/${lang === 'es' ? '' : lang}/rastreo-satelital`} class="border-2 border-white text-white px-8 py-3 hover:bg-white/10 transition-colors">
          {t('hero.cta.more')}
        </a>
      </div>
    </div>
  </div>
</section>