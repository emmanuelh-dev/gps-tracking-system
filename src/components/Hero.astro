---
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---
<section class="pt-24 pb-12 bg-primary ">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-40">
    <div class="text-center text-white">
      <h1 class="text-4xl md:text-6xl font-bold mb-6">
        {t('hero.title')}
      </h1>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        {t('hero.subtitle')}
      </p>
      <div class="flex justify-center gap-4">
        <a href="#demo" class="bg-white text-primary px-8 py-3 hover:bg-gray-100 transition-colors">
          {t('hero.cta.trial')}
        </a>
        <a href={`/${lang === 'es' ? '' : lang}/rastreo-satelital`} class="border-2 border-white text-white px-8 py-3 hover:bg-white/10 transition-colors">
          {t('hero.cta.more')}
        </a>
      </div>
    </div>
  </div>
</section>