---
import { Image } from 'astro:assets';
import replay from "../../src/assets/replay-page.png";
import hero from "../../src/assets/hero.png";
const features = [
  { title: "GPS EN TIEMPO REAL" },
  { title: "OPTIMIZACIÓN" },
  { title: "PRODUCTIVIDAD" },
  { title: "PROTECCIÓN" },
];

const sections = [
  {
    tag: "GPS EN TIEMPO REAL",
    title: "Rastreo y geocercas. Sin complicaciones.",
    description:
      "Mejora el movimiento de carga y el servicio al cliente con rastreo GPS y geocercas inteligentes. Simple, rápido y preciso.",
    links: ["Explora el rastreo GPS >"],
    stats: ["80% menos errores de salida"],
    image: replay,
    logo: "/placeholder.svg",
  },
  {
    tag: "OPTIMIZACIÓN",
    title: "Diagnóstico de vehículos al instante",
    description:
      "Obtén insights sobre el rendimiento de tus vehículos y anticipa problemas de mantenimiento. Datos en tiempo real para decisiones inmediatas.",
    links: ["Mantenimiento inteligente >", "Inspecciones simplificadas >"],
    stats: ["30% de reducción en costos de vehículos"],
    image: replay,
    logo: "/placeholder.svg",
  },
  {
    tag: "PRODUCTIVIDAD",
    title: "Automatización que funciona",
    description:
      "Optimiza la comunicación entre conductores y administración. Flujos de trabajo automatizados que realmente ahorran tiempo.",
    links: ["Gestión de conductores >", "Fleet App >", "Alertas y reportes >"],
    stats: ["40 horas/semana de trabajo manual eliminadas"],
    image: replay,
    logo: "/placeholder.svg",
  },
  {
    tag: "PROTECCIÓN",
    title: "Seguridad sin esfuerzo",
    description:
      "Define zonas de riesgo y activa alertas inteligentes. Protege tu flota sin complicaciones.",
    links: ["Botón de Pánico >", "Inmovilizador de Motor 2.0 >"],
    image: replay,
  },
];
---

<main class="min-h-screen">
  {/* Hero Section */}
  <section class="container mx-auto px-4 py-20">
    <div class="grid gap-12 md:grid-cols-2 items-center">
      <div class="space-y-6">
        <h1 class="text-4xl md:text-5xl font-bold leading-tight">
            Estrategias clave para la máxima eficiencia.
        </h1>
        <p class="text-lg text-gray-400">
          Optimiza costos, maximiza activos y domina la logística de última milla. Sin complicaciones.
        </p>
        <button
          class="bg-white text-black px-6 py-3 rounded-md font-medium hover:bg-gray-200 transition duration-300"
        >
          Empieza ahora
        </button>
      </div>
      <div class="relative h-[300px] rounded-lg overflow-hidden">
        <Image
          src={hero}
          alt="Mapa de logística en tiempo real"
          width={900}
          height={643}
          class="object-cover"
        />
      </div>
    </div>
  </section>

  {/* Features Section */}
  <section class="py-20">
    <div class="container mx-auto px-4">
      <h2 class="text-center text-3xl font-bold mb-12">
        Más que GPS. Una plataforma completa.
      </h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
        {
          features.map((feature) => (
            <div class="p-6 rounded-lg border border-gray-800">
              <p class="font-medium">{feature.title}</p>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  {/* Content Sections */}
  <section class="py-20">
    <div class="container mx-auto px-4">
      <div class="space-y-24">
        {
          sections.map((section, index) => (
            <div class={`grid md:grid-cols-2 gap-12 items-center ${index % 2 === 1 ? "md:grid-flow-col-dense" : ""}`}>
              <div class={`space-y-6 ${index % 2 === 1 ? "md:col-start-2" : ""}`}>
                <div class="inline-block px-3 py-1 rounded-full bg-primary text-white text-sm font-medium">
                  {section.tag}
                </div>
                <h3 class="text-3xl font-bold">{section.title}</h3>
                <p class="text-gray-400 text-lg">{section.description}</p>
                <div class="space-y-3">
                  {section.links?.map((link) => (
                    <a href="#" class="text-blue-400 hover:text-blue-300 font-medium block">
                      {link}
                    </a>
                  ))}
                </div>
                {section.stats?.map((stat) => (
                  <div class="text-2xl font-bold text-green-400">{stat}</div>
                ))}
                {section.logo && (
                  <div class="relative h-8 w-32">
                    <Image
                      width={900}
                      height={643}
                      src={section.logo || "/placeholder.svg"}
                      alt="Logo"
                      class="object-contain"
                    />
                  </div>
                )}
              </div>
              <div class={`relative rounded-lg overflow-hidden ${index % 2 === 1 ? "md:col-start-1" : ""}`}>
                <Image
                  width={900}
                  height={643}
                  src={section.image}
                  alt={section.title}
                  class="object-cover"
                />
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</main>

